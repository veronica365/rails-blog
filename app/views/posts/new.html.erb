<%# Has a form to add a new post %>
<div class='mt-3 d-flex align-items-center flex-column'>
    <h4>Create a new blog post</h4>
    <%= bootstrap_form_with(model: @post, local: true, class: 'w-100 container', url: user_posts_path) do |form| %>
        <%= form.text_field :title %>
        <%= form.text_area :text %>
        <%= form.submit "Submit" %>
        <%= link_to "cancel", user_posts_path(user_id: @current_user.id), class:"btn btn-default btn-outline-dark" %>
    <% end %>
</div>

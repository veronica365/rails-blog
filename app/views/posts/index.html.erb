
<% if @posts.nil? %>
    <%= render 'errors/404', value: 'The specified user has no created blog posts', header: true %>
<% else %>
    <section class='userlist'>
        <%= render 'shared/user', user: @user %>
    </section>
    <%= render "shared/posts", user: @user, posts: @posts, view_more: false %>
    <div class="links">
        <div class="button-links">
            <%= link_to "Pagination", user_posts_path(user_id: @user.id) %>
        </div>
    </div>
<% end %>

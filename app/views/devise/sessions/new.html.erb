<div class='my-3 d-flex align-items-center flex-column'>
  <h2>Log in</h2>

  <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'auth-form container' }) do |f| %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <%= f.password_field :password, autocomplete: "current-password" %>

    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'btn btn-dark btn-block' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

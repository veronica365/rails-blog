<div class='my-3 d-flex align-items-center flex-column'>
  <h2>Forgot your password?</h2>

  <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'auth-form container' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

    <%= f.submit "Send me the instructions", class: 'btn btn-dark btn-block text-center' %>

    <%= render "devise/shared/links" %>
  <% end %>
</div>
